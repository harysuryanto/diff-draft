{
  "name": "diff-draft",
  "displayName": "DiffDraft",
  "description": "Generates intelligent commit message drafts from your Git diffs using AI.",
  "version": "1.0.4",
  "publisher": "harysuryanto",
  "repository": {
    "type": "git",
    "url": "https://github.com/harysuryanto/diff-draft"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "SCM Providers"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "diffDraft.generateCommitMessage",
        "title": "Generate Commit Message",
        "icon": "$(sparkle)",
        "category": "DiffDraft"
      },
      {
        "command": "diffDraft.generating.0",
        "title": "Generating...",
        "icon": "$(clock)",
        "category": "DiffDraft",
        "enablement": "false"
      },
      {
        "command": "diffDraft.generating.1",
        "title": "Generating...",
        "icon": "$(flame)",
        "category": "DiffDraft",
        "enablement": "false"
      },
      {
        "command": "diffDraft.generating.2",
        "title": "Generating...",
        "icon": "$(loading~spin)",
        "category": "DiffDraft",
        "enablement": "false"
      },
      {
        "command": "diffDraft.generating.3",
        "title": "Generating...",
        "icon": "$(wand)",
        "category": "DiffDraft",
        "enablement": "false"
      },
      {
        "command": "diffDraft.generating.4",
        "title": "Generating...",
        "icon": "$(symbol-color)",
        "category": "DiffDraft",
        "enablement": "false"
      },
      {
        "command": "diffDraft.success",
        "title": "Done!",
        "icon": "$(thumbsup)",
        "category": "DiffDraft",
        "enablement": "false"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "diffDraft.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git && !diffDraft.isGenerating && !diffDraft.isSuccess"
        },
        {
          "command": "diffDraft.success",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.isSuccess"
        },
        {
          "command": "diffDraft.generating.0",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.generatingIcon == 0"
        },
        {
          "command": "diffDraft.generating.1",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.generatingIcon == 1"
        },
        {
          "command": "diffDraft.generating.2",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.generatingIcon == 2"
        },
        {
          "command": "diffDraft.generating.3",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.generatingIcon == 3"
        },
        {
          "command": "diffDraft.generating.4",
          "group": "navigation",
          "when": "scmProvider == git && diffDraft.generatingIcon == 4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
